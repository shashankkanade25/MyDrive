<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= file.originalname %> - MyDrive</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      * {
        font-family: 'Cambria Math', 'Cambria', serif;
      }
      body {
        background-color: #C6AE95;
      }
      @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }
      .animate-fadeInUp { animation: fadeInUp 0.5s ease-out forwards; }
    </style>
  </head>
  <body class="bg-gray-50 min-h-screen">
    
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-40 shadow-sm">
      <div class="max-w-7xl mx-auto px-6 py-5">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <a href="/home" class="text-gray-600 hover:text-gray-900 p-2 rounded-lg hover:bg-gray-100 transition">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
            </a>
            <div>
              <h1 class="text-2xl font-bold text-gray-900"><%= file.originalname %></h1>
              <p class="text-xs text-gray-500">
                <%= file.size ? (file.size / 1024).toFixed(2) + ' KB' : 'Unknown size' %>
                <%= file.format ? ' â€¢ ' + file.format.toUpperCase() : '' %>
              </p>
            </div>
          </div>
          <div class="flex items-center space-x-3">
            <a href="/download/<%= file._id %>" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-2.5 px-6 rounded-lg shadow-md hover:shadow-lg transform hover:scale-105 transition duration-200 flex items-center space-x-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 13V4M7 14H5a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-4a1 1 0 0 0-1-1h-2m-1-5-4 5-4-5m9 8h.01"/>
              </svg>
              <span>Download</span>
            </a>
            <form action="/delete/<%= file._id %>" method="POST" onsubmit="return confirm('Delete this file permanently?');" class="inline">
              <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2.5 px-6 rounded-lg shadow-md hover:shadow-lg transform hover:scale-105 transition duration-200 flex items-center space-x-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z"/>
                </svg>
                <span>Delete</span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-6xl mx-auto px-6 py-10">
      <div class="bg-white rounded-2xl shadow-lg p-8 animate-fadeInUp">
        
        <!-- File Preview -->
        <div class="flex items-center justify-center min-h-[500px]">
          <% const fileExt = file.originalname.split('.').pop().toLowerCase(); %>
          <% if (file.mimetype && file.mimetype.startsWith('image/')) { %>
            <!-- Image Preview -->
            <img src="<%= file.url %>" alt="<%= file.originalname %>" class="max-w-full max-h-[600px] rounded-lg shadow-md">
          
          <% } else if (file.mimetype && file.mimetype.startsWith('video/')) { %>
            <!-- Video Preview -->
            <video controls class="max-w-full max-h-[600px] rounded-lg shadow-md">
              <source src="<%= file.url %>" type="<%= file.mimetype %>">
              Your browser does not support the video tag.
            </video>
          
          <% } else if (fileExt === 'pdf' || (file.mimetype && file.mimetype === 'application/pdf')) { %>
            <!-- PDF Preview -->
            <iframe src="<%= file.url %>" class="w-full h-[600px] rounded-lg shadow-md border-0"></iframe>
          
          <% } else { %>
            <!-- Generic File Icon for other types -->
            <div class="text-center">
              <div class="bg-blue-100 p-12 rounded-full inline-flex items-center justify-center mb-6">
                <svg class="w-32 h-32 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
              </div>
              <h2 class="text-2xl font-bold text-gray-900 mb-3"><%= file.originalname %></h2>
              <p class="text-gray-600 mb-6">Preview not available for this file type</p>
              <a href="/download/<%= file._id %>" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg shadow-md hover:shadow-lg transform hover:scale-105 transition duration-200 inline-flex items-center space-x-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 13V4M7 14H5a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-4a1 1 0 0 0-1-1h-2m-1-5-4 5-4-5m9 8h.01"/>
                </svg>
                <span>Download File</span>
              </a>
            </div>
          <% } %>
        </div>

        <!-- File Info -->
        <div class="mt-8 pt-6 border-t border-gray-200">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">File Information</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="bg-gray-50 p-4 rounded-lg">
              <p class="text-sm text-gray-500 mb-1">File Name</p>
              <p class="font-medium text-gray-900 break-all"><%= file.originalname %></p>
            </div>
            <div class="bg-gray-50 p-4 rounded-lg">
              <p class="text-sm text-gray-500 mb-1">File Size</p>
              <p class="font-medium text-gray-900"><%= file.size ? (file.size / 1024).toFixed(2) + ' KB' : 'Unknown' %></p>
            </div>
            <div class="bg-gray-50 p-4 rounded-lg">
              <p class="text-sm text-gray-500 mb-1">Type</p>
              <p class="font-medium text-gray-900"><%= file.mimetype || 'Unknown' %></p>
            </div>
            <div class="bg-gray-50 p-4 rounded-lg">
              <p class="text-sm text-gray-500 mb-1">Format</p>
              <p class="font-medium text-gray-900"><%= file.originalname.split('.').pop().toUpperCase() %></p>
            </div>
            <div class="bg-gray-50 p-4 rounded-lg">
              <p class="text-sm text-gray-500 mb-1">Uploaded</p>
              <p class="font-medium text-gray-900"><%= new Date(file.createdAt).toLocaleString() %></p>
            </div>
            <div class="bg-gray-50 p-4 rounded-lg">
              <p class="text-sm text-gray-500 mb-1">Storage</p>
              <p class="font-medium text-gray-900">AWS S3</p>
            </div>
          </div>
        </div>
      </div>
    </main>

  </body>
</html>
